# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# CSS, SCSS, and LESS files
[*.{css,scss,less}]
indent_style = space
indent_size = 2

# HTML files
[*.{html,htm}]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,conf}]
indent_style = space
indent_size = 2

# Documentation files
[*.{txt,md,rst}]
indent_style = space
indent_size = 2

# Ignore minified files
[**.min.*]
indent_style = ignore
insert_final_newline = ignore

# Ignore third-party libraries
[**/node_modules/**]
indent_style = ignore
indent_size = ignore

# Ignore build output
[**/dist/**]
indent_style = ignore
indent_size = ignore