{
  "name": "mcp-mindfulness",
  "version": "1.0.0",
  "description": "A modern mindfulness and meditation platform",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "test": "jest --detectOpenHandles --forceExit --setupFilesAfterEnv ./src/__tests__/setup.ts",
    "lint": "eslint . --ext .ts",
    "test:mobile-network": "jest --config=jest.config.js src/__tests__/mobile-integration/network-resilience.test.ts",
    "test:mobile-performance": "jest --config=jest.config.js src/__tests__/mobile-integration/api-performance.test.ts",
    "test:mobile-battery": "node scripts/battery-impact-test.js",
    "test:mobile": "npm run test:mobile-network && npm run test:mobile-performance && npm run test:mobile-battery"
  },
  "keywords": [
    "mindfulness",
    "meditation",
    "wellness",
    "mental-health"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.6.2",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.3",
    "@types/json2csv": "^5.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.10",
    "@types/socket.io": "^3.0.2",
    "@types/socket.io-client": "^3.0.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.0.0",
    "jest": "^29.7.0",
    "joi": "^18.0.1",
    "mongodb-memory-server": "^10.1.4",
    "mongoose": "^8.12.1",
    "morgan": "^1.10.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.9",
    "bcryptjs": "^3.0.2",
    "brace-expansion": "1.1.12",
    "csv-writer": "^1.6.0",
    "form-data": "4.0.4",
    "formidable": "3.5.4",
    "js-yaml": "3.14.2",
    "json2csv": "6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.24.2"
  }
}
